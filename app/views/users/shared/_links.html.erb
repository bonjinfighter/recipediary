<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{OmniAuth::Utils.camelize(provider)}でログイン/新規登録", omniauth_authorize_path(resource_name, provider), method: :post, class: 'btn btn-sm btn-primary btn-block mt-4'  %><br />
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
  <%= link_to "ログインはこちら", new_session_path(resource_name) , class: 'btn btn-outline-secondary btn-block  w-auto mt-3' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: 'btn btn-outline-secondary btn-block  w-auto mt-4'  %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: 'btn btn-outline-secondary btn-block  w-auto'  %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "再設定メールが届かないですか？", new_confirmation_path(resource_name), class: 'btn btn-secondary btn-block  w-auto'  %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "再設定メールが届かないですか？", new_unlock_path(resource_name), class: 'btn btn-outline-secondary w-auto'  %><br />
<% end %>



