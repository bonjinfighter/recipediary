<% if users.any? %>
  <h3 class="p-3 bg-dark text-light top-subtitle">全ての参加ユーザー</h3>
  <ul class="list-unstyled mt-3">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'レシピ一覧', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>