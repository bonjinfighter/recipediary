<div class="textbg p-3 pb-5">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h3>ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.label :email, :class => "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password, :class => "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", :class => "form-control"  %>
        </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>    
          <% end %>

        
        <div class="actions">
          <%= f.submit "ログイン", class: 'btn btn-primary btn-block' %>
        </div>

        <%= render "users/shared/links" %>
        <%= link_to "新規登録はこちら", new_user_registration_path, class: 'btn btn-outline-danger btn-block  w-auto mt-4'  %><br />

      <% end %>
      <div class="container">  
        <%= link_to 'プライバシーポリシー', page_path('privacy'), class:"btn btn-link" %>
        <%= link_to '利用規約', page_path('terms'), class:"btn btn-link" %>
      </div>
    
    </div>
    
  </div>
</div>