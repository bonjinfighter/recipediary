<div class="textbg p-3 pb-5">
  <h3 class="text-center">新規登録</h3>

  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @user, local: true) do |f| %>
      
        <div class="form-group">
          <%= f.label :name, 'ユーザー名' %>
          <%= f.text_field :name, class: 'form-control', rows: 1 %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'e-mail' %>
          <%= f.email_field :email, class: 'form-control', rows: 1 %>
        </div>
        
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control', rows: 1 %>
        </div>
        
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード確認' %>
          <%= f.password_field :password_confirmation, class: 'form-control', rows: 1  %>
        </div>
        
        <div class="form-group">
        <%= f.label :title, '紹介文(任意)' %>
        <%= f.text_field :title, class: 'form-control', rows: 5 %>  
        </div>
        
        
        <%= f.submit '新規登録', class: 'btn btn-primary btn-outline-block' %>
      
      <% end %>
            
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
      <% end %>
    </div>
  </div>
</div>