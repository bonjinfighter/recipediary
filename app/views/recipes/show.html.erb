<div class="textbg p-3 pb-5">

<div class="container">
  <h3 class="p-2 pt-3 "><%= @recipe.user.name %>のレシピ</h3>
  <h3><%= @recipe.title %></h3>
  <% if current_user == @recipe.user %>
  <% end %>
  
  <div class="row row-eq-height">
    <div class="col-md-6">
      <img src="<%= @recipe.image %>"  class="img-responsive" alt="" width="100%">
    </div>
    
    <div class="col-md-6">
      <div class="card" style="width:100%">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">料理した日：<%= @recipe.date %></li>
          <li class="list-group-item"><%= @recipe.content %></li>
          <li class="list-group-item"><%= text_url_to_link(h(@recipe.url1)).html_safe %></li>
          <li class="list-group-item"><%= text_url_to_link(h(@recipe.url2)).html_safe %></li>
        </ul>
          <% if current_user == @recipe.user %>
            <%= link_to '編集', edit_recipe_path(@recipe), class: 'btn btn-outline-info btn-sm' %>
            <%= link_to "削除", @recipe, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-outline-danger btn-sm' %>
          <% end %>
      </div>
        <div class="mt-2 mb-2"><%= render 'favorites/favorite_button', recipe: @recipe %></div>
        <div class="mt-2">
          <% unless current_user == @recipe.user %>
          <p class="mt-3 mb-0 pb-0">このユーザーをフォローしますか？
            <%= render 'relationships/follow_button', user: @recipe.user %>
          <% end %>
          </p>
        </div>
    </div>
  </div>
</div>
</div>


