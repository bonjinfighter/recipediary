<%= form_with(model: @recipe, local: true) do |f| %>
  <div class="form-group">
    <%=f.label "画像をアップロード" %><br><%= f.file_field :image, class: "image" %></p>
    <%=f.label "料理名"%>
      <%= f.text_area :title, class: 'form-control', rows: 1 %><br>

    <%=f.label "リンク、内容、感想"%>
      <%=f.text_area :content, class: 'form-control', rows: 5 %><br>

    <%=f.label "料理した日"%>
      <%=f.date_field :date, class: 'form-control' %><br>

  </div>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>