              <a class="dropdown-item"><%= link_to '全てのユーザー', users_path, class:"nav-link text-light" %></a>
              <a class="dropdown-item"><%= link_to 'ユーザー情報', edit_user_registration_path(current_user), class:"nav-link text-light" %></a>
