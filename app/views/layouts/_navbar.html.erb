  <nav class="navbar navbar-expand-md navbar-dark mb-2 fixed-top p-0">
      <a href="/"><img class="navbar-brand" href="" src="/images/logo_nav.png"></a>
      <% if user_signed_in? %>
        <div id="register_button">
          <%= link_to 'レシピ登録', new_recipe_path, class: 'btn btn-info' %>
