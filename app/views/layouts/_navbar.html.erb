        </div>
        <div class='onesignal-customlink-container'></div>
      <% end %>
    <button type="button" class="navbar-toggler ml-auto" data-toggle="collapse" data-target="#nav-bar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse pt-2" id="nav-bar">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
              <li class="nav-item"><%= link_to '自分のレシピ', user_path(current_user), class:"nav-link" %></li>
              <li class="nav-item"><%= link_to 'お気に入りレシピ', likes_user_path(current_user), class:"nav-link" %></li>
