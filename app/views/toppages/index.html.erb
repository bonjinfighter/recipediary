<% if logged_in? %>
  <div class="textbg m-0">
    <div class="container mt-3 pt-2">
      <h3 class="p-2" style="font-size: 120%; color:#1D3154; font-weight: bold;"><%= current_user.name %>のレシピ候補</h3> 
      <div style="padding: 10px 0 10px 0;">
        <button type="button" class="btn btn-raised btn-outline-success" onclick="location.reload();">シャッフルする</button>   
  
      </div>
      <div class="row">
          <% @recipes.sample(3).each do |recipe| %>
              <div class="col-md-4 text-truncate mt-2">
                <div class="card h-100">
                    <img class="card-img-top"  src="<%= recipe.image %>" alt="">
                      <div class="card-body">
                        <p class="card-title"><%= recipe.title %></p>
                        <p class="card-subtitle"><%= recipe.date %></p>
                        <%= link_to "詳細",("/recipes/#{recipe.id}"), class: 'btn btn-outline-dark' %>
                      </div>
                 </div>
              </div>             
          <% end %>
        <% unless @recipes.any? %>
          <div class="col-md-4 mt-2">
            <div class="card border-info mb-3">
              <div class="card-body text-info">
                <p class="card-text">レシピの登録がまだありません。登録しませんか？</p>
                <div id="buttons">
                  <%= link_to 'レシピを登録', new_recipe_path, class: 'btn btn-outline-info' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>  
  </div>  

  <div class="textbg m-0">
    <div class="container mt-3">
      <h3 class="p-2" style="font-size: 120%; color:#1D3154; font-weight: bold;">友達の新規レシピ</h3>
      <div class="row">
        <% @followingrecipes.first(3).each do |recipe| %>
          <div class="col-md-4 mt-2">
            <div class="card h-100">
                <img class="card-img-top"  src="<%= recipe.image %>" alt="">
                  <div class="card-body">
                    <p class="card-title"><%= recipe.title %></p>
                    <p class="card-subtitle"><%= recipe.date %></p>
                    <%= link_to "詳細",("/recipes/#{recipe.id}"), class: 'btn btn-outline-dark' %>
                 </div>
            </div>
          </div>
        <% end %>
        <% unless @followingrecipes.any? %>
          <div class="col-md-4 mt-2">
            <div class="card border-info mb-3">
              <div class="card-body text-info">
                <p class="card-text">レシピ友達の登録がまだありません。登録しませんか？</p>
                <div id="buttons">
                  <%= link_to '全てのレシピを見る', recipes_path, class: 'btn btn-outline-info' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>  
  </div>  
  
  <div class="textbg m-0">
    <div class="container mt-3">
      <h3 class="p-2"style="font-size: 120%; color:#1D3154; font-weight: bold;">新規投稿レシピ</h3>
      <div class="row">
        <% @allrecipes.first(3).each do |recipe| %>
          <div class="col-md-4 mt-2">
            <div class="card h-100">
                <img class="card-img-top"  src="<%= recipe.image %>" alt="">
                  <div class="card-body">
                    <p class="card-title"><%= recipe.title %></p>
                    <p class="card-subtitle"><%= recipe.date %></p>
                    <%= link_to "詳細",("/recipes/#{recipe.id}"), class: 'btn btn-outline-dark' %>
                  </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>  
  </div>  
  
  <div class="textbg m-0">
    <div class="container mt-3">
      <h3 class="p-2" style="font-size: 120%; color:#1D3154; font-weight: bold;">参考サイト</h3>
      <div class="row">
        <button type="button" class="btn btn-link">
          <a href="https://cookpad.com/" target="_blank">クックパッド</a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="https://cocoroplus.jp.sharp/kitchen/recipe/" target="_blank">cocoro kitchen</a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="https://delishkitchen.tv/" target="_blank">DELISH KITCHEN</a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="https://www.kurashiru.com/" target="_blank">クラシル</a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="https://recipe.rakuten.co.jp/" target="_blank">楽天レシピ</a>
        </button>
      </div>  
    </div>
  </div>
  
<% else %>
  <div class="top">
    <div class="jumbotron" style="background-color: transparent;">
      <div class="container-fluid">
          <h1 class="text-center">レシピ日記</h1>
          <p class="text-center">~自分だけのレパートリー~</p>
      </div>
    </div>
    <div id="buttons" class="text-center">
      <%= link_to '新規登録', signup_path, class: 'btn btn-primary' %>
      <%= link_to 'ログイン', login_path,  class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>

